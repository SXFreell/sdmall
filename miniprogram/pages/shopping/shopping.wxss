page {
  height: 100%;
}
.shadowTaB {
  z-index: 3;
}
.cartBottom {
  width: 100%;
  height: 48px;
  background-color: #fff;
  display: flex;
  align-items: center;
  z-index: 2;
}
.cartBottom .selectAll {
  margin-left: 16px;
  margin-right: auto;
}
.cartBottom .selectAll .van-checkbox .van-checkbox__label {
  padding-left: 6px;
}
.cartBottom .money {
  font-size: 14px;
  margin-right: 16px;
  color: #e18e35;
}
.cartBottom .getIt {
  display: flex;
}
.cartBottom .getIt .right {
  background-color: #07c160;
  color: #fff;
  padding: 2px 12px 2px 8px;
  border-radius: 0 18px 18px 0;
  margin-right: 16px;
}
.cartBottom .getIt .right:active {
  background-color: #06ad56;
}
.cartBottom .getIt .left {
  background-color: #ee0a24;
  color: #fff;
  padding: 2px 8px 2px 12px;
  border-radius: 18px 0 0 18px;
}
.cartBottom .getIt .left:active {
  background-color: #cc0a21;
}
.mainCart {
  overflow: scroll;
}
.mainCart .nothing {
  font-size: 14px;
  color: rosybrown;
  padding-top: 36px;
  text-align: center;
}
.mainCart .van-checkbox-group {
  padding-top: 8px;
  padding-bottom: 8px;
}
.mainCart .van-checkbox-group .swipe-inner {
  padding: 8px;
  margin: 8px;
  border-radius: 8px;
  background-color: #fff;
}
.mainCart .van-checkbox-group .swipe-inner .van-checkbox__label {
  flex-grow: 1;
}
.mainCart .van-checkbox-group .swipe-inner .checkboxInner {
  display: flex;
  width: 100%;
}
.mainCart .van-checkbox-group .swipe-inner .checkboxInner image {
  height: 86px;
  min-width: 86px;
}
.mainCart .van-checkbox-group .swipe-inner .checkboxInner .right {
  display: flex;
  flex-direction: column;
  margin-left: 8px;
  flex-grow: 1;
}
.mainCart .van-checkbox-group .swipe-inner .checkboxInner .right .title {
  font-weight: bold;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-bottom: auto;
}
.mainCart .van-checkbox-group .swipe-inner .checkboxInner .right .priceAnumber {
  width: 100%;
  display: flex;
  align-items: center;
}
.mainCart .van-checkbox-group .swipe-inner .checkboxInner .right .priceAnumber .price {
  font-size: 17px;
  color: #fc5000;
  margin-right: auto;
}
.mainCart .van-checkbox-group .swipe-inner .checkboxInner .right .priceAnumber .price font {
  font-size: 12px;
  font-weight: bold;
}
.mainCart .van-checkbox-group .van-swipe-cell__right image {
  margin-left: 6px;
  padding: 10px;
  border-radius: 50%;
  background-color: #ee0a24;
  position: absolute;
  transform: translate(0, -50%);
  top: 50%;
  width: 28px;
}
